                            await onlineStoreService.SavePersonalDataOfOrderInServerAsync();

                            break;
                        };
                };
            }
            catch (Exception ex)
            {
                Console.WriteLine(ex.Message);

                // !!! Ask the user abount to close web app or left it !!!
                await TryToCloseWebAppAsync();
            }
        }
    }


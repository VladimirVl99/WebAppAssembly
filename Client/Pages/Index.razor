                        var btnText = string.Format(onlineStoreService.CommonItem.TgWebAppBtnTxts.ShoppingCart,
                            onlineStoreService.FinalPaymentAmount());
                        // Shows the resulting text on the button
                        await twaNet.SetMainButtonTextAsync(JsRuntime, btnText);
                        // Hides a loading indicator on the Tg main button
                        await twaNet.HideProgressAsync(JsRuntime);
                    }
                    // Just sets the new terminal ID for the order
                    else onlineStoreService.SetPickupTerminal(id);
                }
                else if (onlineStoreService.IsLoyaltyProgramAvailableForProcess)
                {
                    await onlineStoreService.SetPickupTerminalWithLoyaltyProgramProcessAsync(id);
                }
                else
                {
                    onlineStoreService.SetPickupTerminal(id);
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
            if (onlineStoreService.IsReleaseMode)
            {
                await twaNet.HideProgressAsync(JsRuntime);
            }

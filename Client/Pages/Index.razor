                            if (onlineStoreService.PersonalInfo.Order.HaveSelectedItems)
                            {
                                var btnText = onlineStoreService.CommonItem.TgWebAppBtnTxts.SelectingProducts;
                                await twaNet.SetMainButtonTextAsync(JsRuntime, btnText);
                            }
                            else
                            {
                                await twaNet.HideMainButtonAsync(JsRuntime);
                            }
                            // Hides the Tg's back button
                            await twaNet.HideBackButtonAsync(JsRuntime);

                            break;
                        };
                    // Goes back to the previous page (main page view)
                    case PageViewType.SelectingAmountsForProducts:
                        {
                            page.GoBack();
                            StateHasChanged();

                            var btnText = onlineStoreService.CommonItem.TgWebAppBtnTxts.SelectingProducts;
                            await twaNet.SetMainButtonTextAsync(JsRuntime, btnText);
                            await twaNet.HideBackButtonAsync(JsRuntime);

                            break;
                        };
                    // Goes back to the previous page (main page view)
                    case PageViewType.ChangingSelectedProductsWithModifiers:
                        {
                            page.GoBack();
                            StateHasChanged();

                            var btnText = onlineStoreService.CommonItem.TgWebAppBtnTxts.SelectingProducts;
                            await twaNet.SetMainButtonTextAsync(JsRuntime, btnText);
                            await twaNet.HideBackButtonAsync(JsRuntime);

                            break;
                        };
                    // Goes back to the previous page (main page view)
                    case PageViewType.ShoppingCart:
                        {
                            page.GoBack();
                            StateHasChanged();

                            var btnText = onlineStoreService.CommonItem.TgWebAppBtnTxts.SelectingProducts;
                            await twaNet.SetMainButtonTextAsync(JsRuntime, btnText);
                            await twaNet.HideBackButtonAsync(JsRuntime);
